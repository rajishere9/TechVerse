---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Define props for the layout, allowing pages to set their own title/description
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title ? `${title} | ${SITE_TITLE}` : SITE_TITLE} description={description ?? SITE_DESCRIPTION} />
		<style>
			/* Add specific layout styles if needed, otherwise rely on global.css */
			.page-content {
				/* Example: Add padding if needed */
				/* padding-bottom: 2rem; */
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<article class="page-content">
				<slot /> <!-- Content from the page using this layout will be injected here -->
			</article>
		</main>
		<Footer />
	</body>
</html>
