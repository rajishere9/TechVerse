---
import { SITE_TITLE } from '../consts';
const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.
	<div class="social-links">
		{/* Removed default Mastodon, Twitter, GitHub links. Add your own social links here if desired. */}
		{/* Example:
		<a href="YOUR_LINK" target="_blank">
			<span class="sr-only">YOUR_SOCIAL_MEDIA</span>
			<svg>...</svg>
		</a>
		*/}
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 4em 1em; /* Adjusted padding */
		background-color: transparent; /* Match body background */
		color: rgb(var(--gray)); /* Use gray for footer text */
		text-align: center;
		font-size: 0.9em; /* Slightly smaller footer text */
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5em; /* Increased gap */
		margin-top: 1.5em; /* Increased margin */
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray)); /* Use gray for icons */
		transition: color 0.2s ease;
	}
	.social-links a:hover {
		color: rgb(var(--white)); /* Lighten icon on hover */
	}
</style>
